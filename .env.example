# OpportuneX Environment Variables

# Application
NODE_ENV=development
PORT=3000
API_GATEWAY_PORT=3001

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/opportunex

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Elasticsearch
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

# API Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@opportunex.com
SENDGRID_FROM_NAME=OpportuneX

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Speech-to-Text
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_CLOUD_CREDENTIALS=path/to/credentials.json
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-azure-region

# External APIs
MLH_API_KEY=your-mlh-api-key
DEVFOLIO_API_KEY=your-devfolio-api-key
INTERNSHALA_API_KEY=your-internshala-api-key

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Feature Flags
ENABLE_VOICE_SEARCH=true
ENABLE_AI_INSTRUCTOR=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_WEBHOOKS=true

# Third-Party API
API_KEY_SALT=your-api-key-salt-for-hashing
WEBHOOK_SECRET_SALT=your-webhook-secret-salt
OAUTH_CLIENT_SECRET_SALT=your-oauth-client-secret-salt

# Rate Limiting (Third-Party API)
DEFAULT_API_RATE_LIMIT=1000
DEFAULT_API_RATE_LIMIT_WINDOW=3600

# OAuth Configuration
OAUTH_AUTHORIZATION_CODE_EXPIRES_IN=600
OAUTH_ACCESS_TOKEN_EXPIRES_IN=3600
OAUTH_REFRESH_TOKEN_EXPIRES_IN=2592000

# Webhook Configuration
WEBHOOK_DEFAULT_TIMEOUT_MS=5000
WEBHOOK_DEFAULT_RETRY_COUNT=3
WEBHOOK_MAX_RETRY_COUNT=10

# CDN & Storage
CDN_URL=https://cdn.opportunex.com
STORAGE_BUCKET=opportunex-storage

# Analytics
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_EXPORT_MAX_ROWS=100000

# Blockchain Verification
BLOCKCHAIN_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_API_KEY
BLOCKCHAIN_PRIVATE_KEY=your_deployer_private_key_here
BLOCKCHAIN_NETWORK=mumbai

# IPFS Configuration (choose Pinata or Infura)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key
PINATA_GATEWAY=https://gateway.pinata.cloud

# Alternative: Infura IPFS
INFURA_IPFS_PROJECT_ID=your_infura_project_id
INFURA_IPFS_PROJECT_SECRET=your_infura_project_secret

# Encryption for blockchain private keys
ENCRYPTION_KEY=generate_secure_random_key_here
